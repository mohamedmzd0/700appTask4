<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.summerproject.a700apps.MainActivity">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="@dimen/logomarg"
        android:layout_width="@dimen/logow"
        android:background="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/logoh" />
   <LinearLayout
       android:layout_marginTop="@dimen/high10"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
       android:layout_height="@dimen/hig40">
       <Button
           android:text="Sing UP"
           android:textColor="#FFF"
           android:id="@+id/button_signUp"
           android:background="@drawable/button_bck"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:text="OR"
           android:textColor="#FFF"
           android:id="@+id/or_tv"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <Button
           android:layout_marginLeft="@dimen/high10"
           android:layout_marginRight="@dimen/high10"
           android:id="@+id/button_signinLinkedin"
           android:text="sign in with linkedin"
           android:layout_width="wrap_content"
           android:paddingLeft="@dimen/hig40"
           android:paddingRight="@dimen/high10"
           android:textColor="#FFF"
           android:background="@drawable/btsignupwithin"
           android:layout_height="@dimen/hig40" />

   </LinearLayout>
      <LinearLayout
          android:layout_marginLeft="@dimen/marg50"
          android:layout_marginRight="@dimen/marg50"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="Full name"
        android:textSize="@dimen/text18sp"
        android:textColor="#FFF"
        android:layout_height="wrap_content" />
      <EditText
        android:hint="enter your full name"
          android:textColor="#FFF"
          android:layout_width="match_parent"
          android:layout_height="@dimen/hig40" />
          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/high10"/>

          <TextView
              android:layout_width="wrap_content"
              android:text="MOBILE NUMBER"
              android:textSize="@dimen/text18sp"
              android:textColor="#FFF"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="enter your mobile number"
              android:textColor="#FFF"
              android:layout_width="match_parent"
              android:layout_height="@dimen/hig40" />
          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/high10"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="Email"
              android:textSize="@dimen/text18sp"
              android:textColor="#FFF"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="enter your e-mail goes here "
              android:textColor="#FFF"
              android:layout_width="match_parent"
              android:layout_height="@dimen/hig40" />
          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/high10"/>

          <TextView
              android:layout_width="wrap_content"
              android:text="Password"
              android:textSize="@dimen/text18sp"
              android:textColor="#FFF"
              android:layout_height="wrap_content" />
          <EditText
              android:hint="@string/pass"
              android:textColor="#FFF"
              android:layout_width="match_parent"
              android:layout_height="@dimen/hig40" />
          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/high10"/>

          <TextView
              android:layout_width="wrap_content"
              android:text="Update Your Profile"
              android:textSize="@dimen/text18sp"
              android:textColor="#FFF"
              android:layout_height="wrap_content" />
          <RelativeLayout
              android:layout_margin="5dp"
              android:paddingLeft="@dimen/pading10"
              android:paddingRight="@dimen/pading10"
              android:background="@drawable/update_relative_border"
              android:layout_width="wrap_content"
              android:layout_height="match_parent">
          <TextView
              android:text="ATTACHED"
              android:textColor="#FFF"
              android:textAlignment="center"
              android:padding="@dimen/pading10"
              android:id="@+id/attched_tv"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/hig40" />
            <ImageView
                android:layout_toEndOf="@+id/attched_tv"
                android:layout_width="@dimen/w25dp"
                android:layout_marginTop="@dimen/pading10"
                android:background="@drawable/ic_attachment"
                android:layout_height="@dimen/h25dp"
                android:layout_toRightOf="@+id/attched_tv" />
          </RelativeLayout>     
        <TextView
            android:text="Foramt : jpeg ,tiff , Less than 1 MB"
            android:layout_width="wrap_content"
            android:textColor="#FFF"
            android:textSize="@dimen/text18sp"
            android:layout_height="wrap_content" />

          <Button

                android:paddingRight="@dimen/h25dp"
              android:paddingLeft="@dimen/h25dp"
              android:layout_marginTop="@dimen/pading20"
              android:text="GET STARTED"
              android:background="@drawable/update_relative_border"
              android:textColor="#FFF"
              android:textSize="@dimen/text18sp"
              android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
  </LinearLayout>
</ScrollView>
